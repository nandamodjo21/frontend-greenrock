<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0E9CC"
    tools:context=".barang.activity.tenda">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Tenda Kemping"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="65dp">

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_marginLeft="32dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/tnda1"
                    android:onClick="tnda1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tenda1"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="tenda 2 orang"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="35dp">
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/tnda2"
                    android:onClick="tnda2"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/tenda2"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="tenda 3 orang"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_marginLeft="32dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:id="@+id/tnd3"
                android:onClick="tnda3"
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/tnda4"
                    android:onClick="tnda4"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tenda3"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="tenda 4 orang"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="35dp">
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/white">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tenda4"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:text="tenda 5 orang"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>